<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane fx:id="workSpace" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="SongCreatorWindow.Controllers.MainController">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
         <menus>
            <Menu mnemonicParsing="false" text="Project">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#SaveProjectToFile" text="Save" />
                  <MenuItem mnemonicParsing="false" onAction="#SaveProjectToFileWithDifferentName" text="Save As" />
                  <MenuItem mnemonicParsing="false" onAction="#LoadProjectFromFile" text="Load" />
                  <MenuItem mnemonicParsing="false" onAction="#ExportProjectToMIDIFile" text="Export" />
                  <MenuItem mnemonicParsing="false" onAction="#ImportProjectFromMIDIFile" text="Import" />
               </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Paths">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#InsertNewPath" text="New Path" />
                  <Menu mnemonicParsing="false" text="Select Path">
                     <items>
                        <MenuItem mnemonicParsing="false" text="Action 1" />
                     </items>
                  </Menu>
                  <Menu mnemonicParsing="false" text="Delete Path">
                     <items>
                        <MenuItem mnemonicParsing="false" text="Action 1" />
                     </items>
                  </Menu>
                  <MenuItem mnemonicParsing="false" onAction="#RenameSelected" text="Rename Selected" />
                  <MenuItem mnemonicParsing="false" onAction="#DeleteSelected" text="Delete Selected" />
                  <MenuItem mnemonicParsing="false" onAction="#RecordPath" text="Record Path" />
               </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Notes">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#InsertNote" text="Insert Note" />
                  <MenuItem mnemonicParsing="false" onAction="#EditNote" text="Edit Note" />
                  <MenuItem mnemonicParsing="false" onAction="#DeleteNote" text="Delete Note" />
               </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Song">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#PlayAllPathsWithoutMutedOnes" text="Play" />
                  <MenuItem mnemonicParsing="false" onAction="#PrintSongToPDFFile" text="Print Song" />
               </items>
            </Menu>
         </menus>
      </MenuBar>
   </top>
   <center>
      <ScrollPane fx:id="scrollPaneWithPaths" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <content>
            <AnchorPane fx:id="anchorPaneWithPaths" />
         </content>
      </ScrollPane>
   </center>
</BorderPane>
